# Create .gitignore in your Loop root directory
cat > .gitignore << 'EOF'
# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
.env*.local

# GitHub prompts folder
.github/prompts/

# Dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Next.js
.next/
out/
build/
dist/

# Cloudflare Workers
.wrangler/
.dev.vars
worker-configuration.d.ts

# IDEs and editors
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Testing
coverage/
.nyc_output/

# Misc
*.log
.cache/
.turbo/
EOF